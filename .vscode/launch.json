{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Vitest",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run", "--pool=threads", "--poolOptions.threads.singleThread", "--testTimeout=0", "coverage.mjs"],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal"
    }
  ]
}
